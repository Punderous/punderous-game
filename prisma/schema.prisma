datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model EmailSubmission {
  id        Int      @id @default(autoincrement())
  email     String
  comment   String?
  createdAt DateTime @default(now())
}

model Pun {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  difficulty Int
  upVotes   Int      @default(0)
  downVotes Int      @default(0)
}
