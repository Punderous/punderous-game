{
    "version": 2,
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.punderous.com"
                }
            ],
            "destination": "https://punderous.com/:path*",
            "permanent": true
        },
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "punderous.com"
                }
            ],
            "missing": [
                {
                    "type": "header",
                    "key": "x-forwarded-proto",
                    "value": "https"
                }
            ],
            "destination": "https://punderous.com/:path*",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        },
        {
            "source": "/images/(.*)\\.jpg",
            "headers": [
                {
                    "key": "cache-control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "content-type",
                    "value": "image/jpeg"
                }
            ]
        },
        {
            "source": "/images/(.*)\\.png",
            "headers": [
                {
                    "key": "cache-control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "content-type",
                    "value": "image/png"
                }
            ]
        },
        {
            "source": "/favicon.ico",
            "headers": [
                {
                    "key": "cache-control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "content-type",
                    "value": "image/x-icon"
                }
            ]
        }
    ],
    "images": {
        "domains": ["www.punderous.com"],
        "sizes": [640, 750, 828, 1080, 1200],
        "remotePatterns": [
            {
                "protocol": "https",
                "hostname": "www.punderous.com"
            }
        ]
    }
}